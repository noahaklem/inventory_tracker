<h1>Products for <%= @warehouse.name %></h1>

<table>
  <tr class="header-container">
    <th class="header">Name</th>
    <th class="header">Description</th>
    <th class="header">Price</th>
    <th class="header">Quantity</th>
    <th class="header"><%= button_to "+", new_warehouse_product_path, method: :get %></th>
  </tr>
  <% @products.each do |p| %>
    <tr class="data-row">
      <td class="data"><%= p.name %></td>
      <td class="data"><%= p.description %></td>
      <td class="data"><%= number_to_currency(p.price) %></td>
      <td class="data"><%= p.quantity %></td>
      <td class="data"><%= button_to "Show Product", warehouse_product_path(@warehouse, p), method: :get %></td>
      <td class="data"><%= button_to "Edit", edit_warehouse_product_path(@warehouse, p), method: :get %></td>
      <td class="data">
        <%= button_to "Delete", warehouse_product_path(@warehouse, p), method: :delete %>
      </td>
    </tr>
  <% end %>
</table><br>

<%= button_to "Back", warehouses_path, method: :get %>





