<h3>Edit Product Form</h3>

<%= form_for @product do |f| %>
  <%= f.label 'Product Name:'%> <br>
  <%= f.text_field :name %><br>

  <%= f.label 'Product Price:'%><br>
  <%= f.number_field :price %><br>

  <%= f.label 'Product Description:'%><br>
  <%= f.text_area :description %><br>

  <%= f.submit "Edit Product" %>
<% end %>